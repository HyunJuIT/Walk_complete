<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Join">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cardview_light_background"
        android:fontFamily="@font/nanumsquare"
        android:text="완료"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edit_email_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border_non"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.282"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_email_send"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/round_border_non"
        android:fontFamily="@font/nanumsquare"
        android:text="인증번호 발송"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/edit_email_join"
        app:layout_constraintStart_toEndOf="@+id/edit_email_join"
        app:layout_constraintTop_toTopOf="@+id/edit_email_join"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_email_code_check"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/round_border_non"
        android:fontFamily="@font/nanumsquare"
        android:text="인증"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/edit_number_join"
        app:layout_constraintEnd_toEndOf="@+id/btn_email_send"
        app:layout_constraintStart_toStartOf="@+id/btn_email_send"
        app:layout_constraintTop_toTopOf="@+id/edit_number_join"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edit_number_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_border_non"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="인증번호"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/edit_email_join"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/edit_email_join"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_join" />

    <EditText
        android:id="@+id/edit_password_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_border_non"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/btn_email_code_check"
        app:layout_constraintStart_toStartOf="@+id/edit_number_join"
        app:layout_constraintTop_toBottomOf="@+id/edit_number_join" />

    <EditText
        android:id="@+id/edit_passwordcheck_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_border_non"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/edit_password_join"
        app:layout_constraintStart_toStartOf="@+id/edit_password_join"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_join" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare"
        android:text="회원가입"
        android:textColor="@color/cardview_light_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_email_join"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>