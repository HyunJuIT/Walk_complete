<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A6EFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_Location"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_marginBottom="50dp"
        android:layout_weight="0.5"
        android:drawableLeft="@drawable/ic_place_24px"
        android:fontFamily="@font/nanumsquare"
        android:gravity="center"
        android:padding="12dp"
        android:text="정보없음"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txt_mainMent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/nanumsquare"
        android:gravity="center"
        android:text="OO님 오늘 산책 어떠신가요?"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/main_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100px"
        android:fontFamily="@font/nanumsquare"
        android:gravity="center_horizontal"
        android:text="7월 29일 오후 05:30"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginBottom="150px"
        android:layout_weight="4.3"
        android:background="@drawable/round_border_non"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare"
                    android:gravity="center"
                    android:text="현재 기온"
                    android:textColor="@android:color/tertiary_text_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/nanumsquare"
                        android:gravity="center"
                        android:text="11"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="℃"
                        android:textColor="@android:color/tertiary_text_light"
                        android:textSize="24sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare"
                    android:gravity="center"
                    android:text="맑음"
                    android:textColor="@android:color/tertiary_text_light" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_weather_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/ic_wb_sunny_24px" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nanumsquare"
            android:gravity="center_horizontal"
            android:text="산책을 해볼까요?"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </LinearLayout>

    <Button
        android:id="@+id/goWalkStart"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginBottom="150px"
        android:layout_weight="0.8"
        android:background="@drawable/round_border_non"
        android:fontFamily="@font/nanumsquare"
        android:text="산책 Start"
        android:textColor="@color/colorPrimary" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/cardview_light_background"
        app:itemIconTint="@drawable/navigation_color"
        app:itemTextColor="@drawable/navigation_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation_menu" />

</LinearLayout>